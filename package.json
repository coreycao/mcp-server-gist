{
  "name": "mcp-server-gist",
  "version": "1.0.0",
  "type": "module",
  "description": "A Model Context Protocol(MCP) Server that wraps GitHub Create-Gist API as a MCP tool",
  "bin": {
    "mcp-server-gist": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod 755 build/index.js",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "files": [
    "build",
    "README.md"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "github",
    "gist",
    "api"
  ],
  "author": {
    "name": "Yeung"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/corey/mcp-server-gist.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@octokit/core": "^6.1.4",
    "dotenv": "^16.4.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/node": "^22.13.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}